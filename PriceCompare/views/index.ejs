<div ng-app="PriceCompare">
  <nav class="navbar navbar-default" ng-controller="MainNavCtrl">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button ng-click="navCollapsed=!navCollapsed" type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/"><img class="logo" src="/images/logo.png"></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <!-- collapse="navCollapsed"  to collapse hamburger button -->
      <div collapse="navCollapsed" class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <!-- function to determine if button is active-->
          <li ng-class="{active:isActive('/about')}"><a href="/about">About</a></li>
          <li ng-class="{active:isActive('/faq')}"><a href="/faq">FAQ</a></li>
          <!-- add dropdown directive (no quotes) which is UI Bootstrap directive -->
          <li class="dropdown" dropdown>
            <!-- add dropdown-toggle directive (no quotes) which is UI Bootstrap directive -->
            <a href="#" dropdown-toggle class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li class="divider"></li>
              <li><a href="#">Separated link</a></li>
              <li class="divider"></li>
              <li><a href="#">One more separated link</a></li>
            </ul>
          </li>
        </ul>
        <form ng-submit="search()" class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input ng-model="searchTerm" type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <li ng-hide="currentUser"><a href="" ng-click="showLogin()">Login</a></li>
          <li ng-hide="currentUser"><a href="" ng-click="showSignup()">Signup</a></li>
          <!-- add dropdown directive (no quotes) which is UI Bootstrap directive -->
          <li ng-show="currentUser" class="dropdown" dropdown>
            <!-- add dropdown-toggle directive (no quotes) which is UI Bootstrap directive -->
            <a href="#" dropdown-toggle class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{currentUser.firstName || 'User'}} <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Setting</a></li>
              <li><a href="#">Privacy</a></li>
              <li><a href="#">Something else</a></li>
              <li class="divider"></li>
              <li><a href="" ng-click="logout()">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="container">
    math: 2+2 = {{2+2}}
    <ng-view></ng-view>
  </div>
</div>